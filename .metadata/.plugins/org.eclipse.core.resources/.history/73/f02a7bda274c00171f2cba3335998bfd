<?xml version="1.0" encoding="UTF-8"?>
<!DOCTYPE mapper
PUBLIC "-//mybatis.org//DTD Mapper 3.0//EN"
"http://mybatis.org/dtd/mybatis-3-mapper.dtd">
<mapper namespace="com.student.dao.StudentDao">
	
	<resultMap type="Student" id="StudentResult">
		<result property="id" column="id"/>
		<result property="name" column="name"/>
		<result property="age" column="age"/>
		<association property="grade" column="gradeId" select="com.student.dao.GradeDao.findById"></association>
	</resultMap>
	
	<select id="findStudent" resultMap="StudentResult">
		select * from t_student2
	</select>
	
	<update id="updateStudent" parameterType="Student">
		update t_student2 set name = #{name},age=#{age},gradeId=#{grade.id} where id = #{id}
	</update>
	
	<delete id="deleteStudent" parameterType="Map">
		delete from t_student2 
			<where>
				<foreach item="id" collection="ids">
					or id = #{id}
				</foreach>
			</where>
	</delete>
	
	<insert id="insertStudent" parameterType="Map">
		insert into t_student2 values
			<foreach item="student" collection="students" separator=",">
				(null,#{name},#{age},#{gradeId})
			</foreach>
	</insert>
	
</mapper>