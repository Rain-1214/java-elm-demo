<?xml version="1.0" encoding="UTF-8" ?>
<!DOCTYPE mapper
PUBLIC "-//mybatis.org//DTD Mapper 3.0//EN"
"http://mybatis.org/dtd/mybatis-3-mapper.dtd">
<mapper namespace="com.student.dao.UserDao">

	<resultMap type="User" id="UserResult">
		<result property="id" column="id"/>
		<result property="userName" column="userName"/>
		<result property="password" column="password"/>
		<result property="safetyQuestion" column="safetyQuestion"/>
		<result property="safetyAnswer" column="safetyAnswer"/>
	</resultMap>
	
	<select id="login" parameterType="User" resultMap="UserResult">
		select * from t_user where userName=#{userName} and password=#{password}
	</select>
	
	<insert id="insertUser" parameterType="User">
		insert into t_user values(null,#{userName},#{password},#{safetyQuestion},#{safetyAnswer})
	</insert>
	
	<select id="findUser" parameterType="Map" resultType="User">
		select * from t_user 
			<where>
				<if test="id != null">
					and id = #{id}
				</if>
				<if test="userName != null">
					and userName = #{userName}
				</if>
			</where>
	</select>

</mapper> 